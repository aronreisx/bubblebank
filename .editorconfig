root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.go]
indent_style = unset
indent_size = unset
end_of_line = unset
charset = unset
trim_trailing_whitespace = unset
insert_final_newline = unset

[*.{md,yaml,yml}]
quote_type = single
trailing_comma = all

[*.json]
quote_type = double

[Makefile]
indent_style = tab

[*.md]
trim_trailing_whitespace = false
